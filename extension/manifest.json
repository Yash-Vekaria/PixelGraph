{
    "manifest_version": 2,
    "version": "1.0",
    "name": "PixelGraph",
    "description": "Tracks iframe creation, injections, and interactions on webpages",
    "permissions": [
        "webRequest", 
        "webNavigation", 
        "webRequestBlocking",
        "contentSettings",
        "debugger", 
        "tabs", 
        "activeTab", 
        "storage", 
        "*://*/*", 
        "<all_urls>"
    ],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*/*", "<all_urls>"],
            "js": ["scripts/content.js"],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": ["inject.js"],
    "browser_action": {
        "default_title": "PixelGraph"
    }
}